<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/bg"
    tools:context=".Educational_Details">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginRight="-3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="19dp"
                android:text="High School"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/school10"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="27dp"
                android:ems="10"
                android:hint="School"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/grade10"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Grade"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/year10"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Year"
                android:inputType="number" />

            <TextView
                android:id="@+id/details12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="27dp"
                android:text="Intermediate School"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/school12"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="27dp"
                android:ems="10"
                android:hint="School"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/grade12"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Grade"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/year12"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Year"
                android:inputType="number" />

            <TextView
                android:id="@+id/detailsGrad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="27dp"
                android:text="Graduation"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/uniGrad"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="27dp"
                android:ems="10"
                android:hint="University"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/gradeGrad"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Grade"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/yearGrad"
                android:layout_width="289dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:hint="Graduation Year"
                android:inputType="number" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:onClick="Fromeducational"
                android:text="Next" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>